{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://personal-blog-production-059a.up.railway.app/api/$1"
    },
    {
      "source": "/uploads/(.*)",
      "destination": "https://personal-blog-production-059a.up.railway.app/uploads/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite"
} 